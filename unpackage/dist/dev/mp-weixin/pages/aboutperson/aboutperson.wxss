.content .head {
  padding: 25px 10px 30px 10px;
  text-align: center;
  font-size: 20px;
  background-color: #fff;
}
.content .tui-page-title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 70rpx 0 30rpx 0;
}
.content .tui-logo {
  height: 120rpx;
  width: 120rpx;
}
.content .tui-title {
  font-size: 64rpx;
  padding-left: 20rpx;
  color: #333;
  position: relative;
}
.content .tui-link {
  color: #5677fc;
}
.content .tui-cell {
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
}
.content .tui-cell:before {
  content: ' ';
  position: absolute;
  top: 0;
  right: 0;
  border-top: 1px solid #eaeef1;
  color: #eaeef1;
  left: 15px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
.content .tui-cell:first-child:before {
  display: none;
}
.content .tui-cell_active {
  background-color: #f7f7f9;
}
.content .tui-cell_bd {
  flex: 1;
}
.content .tui-cell_ft {
  text-align: right;
  color: #999;
}
.content .tui-cell_access {
  color: inherit;
}
.content .tui-cell_ft_in-access {
  padding-right: 13px;
  position: relative;
}
.content .tui-cell_ft_in-access:after {
  content: ' ';
  height: 11px;
  width: 11px;
  border-width: 2px 2px 0 0;
  border-color: #b2b2b2;
  border-style: solid;
  -webkit-transform: matrix(0.5, 0.5, -0.5, 0.5, 0, 0);
  transform: matrix(0.5, 0.5, -0.5, 0.5, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -7px;
  right: 2px;
}
.content .tui-form-preview_item {
  overflow: hidden;
}
.content .tui-flex {
  display: flex;
}
.content .tui-flex_item {
  flex: 1;
}
.content .tui-page-desc {
  color: #666;
  font-size: 28rpx;
  text-align: center;
  padding-bottom: 50rpx;
}
.content .tui-flex {
  align-items: center;
}
.content .tui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  transition: 0.3s;
}
.content .tui-cells:before,
.content .tui-cells:after {
  display: none;
}
.content .tui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
  transform: translateY(0);
}
.content .tui-cell:before {
  right: 15px;
}
.content .kind-list_item {
  margin: 10px 0;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
}
.content .kind-list_item:first-child {
  margin-top: 0;
}
.content .kind-list_img {
  width: 20px;
  height: 20px;
}
.content .tui-img-1,
.content .tui-img-2,
.content .tui-img-8 {
  width: 32px !important;
  height: 32px !important;
}
.content .tui-img-7 {
  width: 28px !important;
  height: 28px !important;
}
.content .kind-list_item-hd {
  padding: 20px;
  transition: opacity 0.3s;
}
.content .kind-list_item-hd_show {
  opacity: 0.4;
}
.content .kind-list_item-bd {
  height: 0;
  overflow: hidden;
}
.content .kind-list_item-bd_show {
  height: auto;
}
.content .tui-badge {
  position: absolute;
  width: 80rpx;
  height: 30rpx;
  border-radius: 30rpx 30rpx 30rpx 0;
  color: #fff;
  background: #eb0909;
  font-size: 25rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-transform: scale(0.8) translateX(100%);
          transform: scale(0.8) translateX(100%);
  -webkit-transform-origin: center center;
          transform-origin: center center;
  top: -8rpx;
  right: 0;
}

